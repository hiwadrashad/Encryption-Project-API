@model Encryption_Project_LIB.ViewModels.RegisterUserVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
<html lang="en">
<style>
    body {
        background-color: #e6e6e6 !important;
    }

        @@media screen and (min-width: 1367px) {
            .main-container {
                width: 100vw !important;
                transform: translateX(-20vw);
            }
        }
    

    @@media screen and (max-width: 1367px) {
        .main-container {
            width: 100vw !important;
            transform: translateX(-7vw);
        }
        .sub-container {
        transform: scale(0.8) !important;
        }
    }
</style>
<head>
    <title>Contact V5</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/Form/images/icons/favicon.ico">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/vendor/noui/nouislider.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/Form/css/util.css">
    <link rel="stylesheet" type="text/css" href="/Form/css/main.css">
    <!--===============================================================================================-->
</head>
<body>


    <div class="container-contact100 main-container">
        <div class="sub-container">
            <form class="contact100-form  validate-form" asp-action="Register" asp-controller="Return">
                <span class="contact100-form-title">
                   Fill in user data
                </span>

                <div class="wrap-input100 validate-input bg1" data-validate="Please Type Name">
                    <span class="label-input100">Username</span>
                    <input asp-for="User.Username" class="input100" type="text" name="name" placeholder="Username">
                </div>


                <div class="wrap-input100 validate-input bg1" data-validate="Please Type Name">
                    <span class="label-input100">Password</span>
                    <input asp-for="password" class="input100" type="text" name="name" placeholder="Password">
                </div>

                <div class="wrap-input100 validate-input bg1" data-validate="Please Type Name">
                    <span class="label-input100">Priveleges</span>
                    <input class="input100" type="text" name="name" placeholder="Priveleges">
                </div>

                <div class="wrap-input100 validate-input bg1" data-validate="Please Type Name">
                    <span class="label-input100">Roles</span>
                    <input class="input100" type="text" name="name" placeholder="Roles">
                </div>

                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn">
                        <span>
                            Submit
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>






</body>
</html>